{% extends 'base.html.twig' %}

{% block title %}Films index
{% endblock %}

{% block body %}
	<h1>Films index</h1>

	<table class="table">
		<thead>
			<tr>

				<th>Image</th>
				<th>Titre</th>
				<th>Réalisateur</th>
				<th>Genre</th>
				<th>Durée</th>
				<th>Status</th>
				<th>Action</th>
				<th>Supprimer</th>
			</tr>
		</thead>
		<tbody>
			{% for films in films %}
				<tr>
					<td><img style="max-height: 100px;" src="/img/{{ films.img }}"></td>
					<td>{{ films.title }}</td>
					<td>{{ films.realisateur  }}</td>
					<td>{{ films.genre }}</td>
					<td>{{ films.duree }}</td>
					<td>{{ films.status }}</td>
					<td>
						<a href="{{ path('film_show', {'id': films.id}) }}">show</a>
						<a href="{{ path('film_edit', {'id': films.id}) }}">edit</a>
					</td>
					<td>
						{{ include('film/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('film_new') }}">Create new</a>
{% endblock %}
