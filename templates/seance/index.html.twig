{% extends 'base.html.twig' %}

{% block title %}Seance index
{% endblock %}

{% block body %}
	<h1>Seance index</h1>

	<table class="table">
		<thead>
			<tr>

				<th>Début de séance</th>
				<th>Heure</th>
				<th>Titre</th>
				<th>Langue</th>
				<th>N° de salle</th>
				<th>Actions</th>
				<th>Supprimer</th>
			</tr>
		</thead>
		<tbody>
			{% for seance in seances %}
				<tr>
					<td>{{ seance.dateDebut ? seance.dateDebut|date('d-m-Y') : '' }}</td>
					<td>{{ seance.dateDebut ? seance.dateDebut|date('H:i') : '' }}</td>
					<td>{{ seance.films.title  }}</td>
					<td>{{ seance.lang }}</td>
					<td>{{ seance.salle.numeroSalle }}</td>
					<td>
						<a href="{{ path('seance_show', {'id': seance.id}) }}">show</a>
						<a href="{{ path('seance_edit', {'id': seance.id}) }}">edit</a>
					</td>
					<td>
						{{ include('seance/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('seance_new') }}">Create new</a>
{% endblock %}
