{% extends "base.html.twig" %}
{% block title %}Listing films
{% endblock %}
{% block body %}
	<div class="w-100 text-center" style="">
		<img class="" src="/img/affiche.png">
	</div>
	{% if films|length == 0 %}
		Il n'y a pas de film disponible pour le moment.
	{% endif %}
	<div class="container">
		<div class="row">
			{% for films in films %}

				<a href="{{ path('showFilm', {'id': films.id } ) }}">
					<div class="col-xl-4 col-md-4 col-lg-3 col-6 mb-4 px-xl-5 px-lg-4 px-md-3">
						<div class="border">
							<div class="text-center mt-4">
								<img style="max-width: 80%;" src="/img/{{ films.img }}">
							</div>
							<div style="color: black; !important ">
								<h4 class="text-center pt-2">
									{{films.title}}
								</h4>

								<div class="text-center">
									{{ films.realisateur }}
								</div>
								<div class="text-center">
									{{ films.genre }}.

								</div>

								<div class="text-center">
									Prochaines séances le :

								</div>
								{% for seance in seance %}
									{% if seance.films.id == films.id %}
										<div class="pl-5">
											{{ seance.dateDebut ? seance.dateDebut|date('d-m-Y') : '' }}
											à
											{{ seance.dateDebut ? seance.dateDebut|date('H:i') : ''  }}
										</div>
									{% endif %}
								{% endfor %}


							</div>
						</a>
					</div>
				</div>


			{% endfor %}
		</div>
	</div>
{% endblock %}
